{
  "if": {
    "allOf": [
      {
        "field": "type",
        "equals": "Microsoft.Web/sites"
      },
      {
        "field": "kind",
        "notContains": "functionapp"
      },
      {
        "field": "kind",
        "contains": "linux"
      }
    ]
  },
  "then": {
    "effect": "[parameters('effect')]",
    "details": {
      "type": "Microsoft.Web/sites/config",
      "name": "web",
      "existenceCondition": {
        "anyOf": [
          {
            "field": "Microsoft.Web/sites/config/web.linuxFxVersion",
            "in": "[parameters('listOfAllowedLinuxfxversion')]"
          }
        ]
      }
    }
  }
}
